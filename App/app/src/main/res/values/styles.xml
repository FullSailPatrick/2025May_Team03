<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GradientButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/gradient_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Navigation styles-->
    <style name="menuTextStyles" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Full screen dialog theme-->
    <style name="FullScreenDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>


</resources>